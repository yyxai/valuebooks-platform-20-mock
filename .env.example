# ValueBooks Platform - Environment Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# Port Configuration
# =============================================================================
# All ports default to 4000+ range to avoid conflicts with other services

# PostgreSQL port (default: 5433 to avoid conflict with standard 5432)
DB_PORT=5433

# API server port
API_PORT=4000

# B2C frontend port
B2C_PORT=4001

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL credentials (used when running PostgreSQL in Docker)
POSTGRES_DB=valuebooks
POSTGRES_USER=valuebooks
POSTGRES_PASSWORD=dev_password

# Full database URL (used by the API)
# Override this to use an external PostgreSQL instance
DATABASE_URL=postgres://valuebooks:dev_password@db:5432/valuebooks

# =============================================================================
# Authentication
# =============================================================================
# JWT secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production

# JWT expiration times
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# OAuth Providers (optional)
# =============================================================================
# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_REDIRECT_URI=http://localhost:4001/auth/google/callback

# Apple OAuth
# APPLE_CLIENT_ID=
# APPLE_TEAM_ID=
# APPLE_KEY_ID=
# APPLE_PRIVATE_KEY=

# Amazon OAuth
# AMAZON_CLIENT_ID=
# AMAZON_CLIENT_SECRET=
# AMAZON_REDIRECT_URI=http://localhost:4001/auth/amazon/callback

# Facebook OAuth
# FACEBOOK_APP_ID=
# FACEBOOK_APP_SECRET=
# FACEBOOK_REDIRECT_URI=http://localhost:4001/auth/facebook/callback

# =============================================================================
# Frontend Configuration
# =============================================================================
# API URL for frontend to connect to backend
NEXT_PUBLIC_API_URL=http://localhost:4000

# =============================================================================
# External Network (optional)
# =============================================================================
# Connect to an existing Docker network (e.g., to use shared database)
# EXTERNAL_NETWORK=your_network_name
